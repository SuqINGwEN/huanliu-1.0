<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  android:orientation="vertical">
    <include layout="@layout/title_bar_geren_back_btn_item_includ"/>
    <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/downlad_management_indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    </com.viewpagerindicator.TabPageIndicator>
    <android.support.v4.view.ViewPager
        android:id="@+id/downlad_management_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="@+id/downlad_management_indicator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <include layout="@layout/bottom_bar_geren_systemsize"/>
</LinearLayout>
